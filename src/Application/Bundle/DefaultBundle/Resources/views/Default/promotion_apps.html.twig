{% extends '::base.html.twig' %}

{% block body %}
    <div class="slide scrollto-line {{ app.request.locale == 'de'?'de':'' }}">
        <div class="wrap">
            <a class="btn" id="scrollto-btn" href="#">{{ 'Заказать приложение'|trans }}</a>
        </div>
    </div>
    <section class="slide header-slide">
        <div class="inner">

            {% if app.request.locale != 'de' %}
                <a class="logo icon" title="stfalcon" href="{{ path('homepage') }}"></a>
            {% else %}
                <span class="logo icon"></span>
            {% endif %}

            <div id="scroll-down" class="icon"></div>

            <div class="inner-content">
                <h1>{{ "Разработка мобильных игр&nbsp;и&nbsp;приложений" | trans() | raw }}</h1>
                <p>{{ "Мы разрабатываем игры и приложения для смартфонов и планшетов на базе платформ Android&nbsp;и&nbsp;iOS." | trans() | raw }}</p>
                <div class="platforms">
                    <div class="icon icon-android"></div>
                    <div class="icon icon-apple"></div>
                </div>
                <a class="btn" id="to-feedback-btn" href="">{{ "Заказать приложение" | trans() }}</a>
            </div>
        </div>
    </section>

    <section class="our-advantages-wr">
        <div class="wrap">
            <h1>{{ 'Почему мы?'|trans }}</h1>

            <div class="our-advantages clearfix">
                <div class="column float-left">
                    <div class="advantage-item">
                        <div class="inf-pad">
                            <div class="wr">
                                <p>{{ 'Индивидуальный подход к менеджменту проекта и организации рабочего процесса'|trans }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="advantage-item">
                        <div class="inf-pad">
                            <div class="wr">
                                <p>{{ 'Соблюдаем сроки, используем разные методологии разработки'|trans }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="column float-right">
                    <div class="advantage-item">
                        <div class="inf-pad">
                            <div class="wr">
                                <p>{{ 'Команда состоит из более 20 опытных специалистов'|trans }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="advantage-item">
                        <div class="inf-pad">
                            <div class="wr">
                                <p>{{ 'За 5 лет мы успешно запустили и поддерживаем более 80 проектов'|trans }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% if app.request.locale != 'de' %}
    <section class="extended-app-slide">
        <img class="blank-img" src="/img/pages/promotions/apps/extended_appslide_blank.png" alt=""/>
        <div class="section-left">
            <img class="blank-img small" src="/img/pages/promotions/apps/extended_appslide_blank01.png" alt=""/>
            <div class="info-wr">
                <h3>{{ 'MeinFernbus.de'|trans }}</h3>
                <p>{{ 'Мобильное приложение для крупнейшего пассажирского перевозчика в Германии.'|trans }}</p>
            </div>
        </div>
        <div class="section-right-top">
            <img class="blank-img small" src="/img/pages/promotions/apps/extended_appslide_blank02.png" alt=""/>
            <div class="info-wr">
                <h3>{{ 'Дороги Украины'|trans }}</h3>
                <p>{{ 'Социальный стартап по оценке качества дорог Украины.'|trans }}</p>
            </div>
        </div>
        <div class="section-right-bottom">
            <img class="blank-img small" src="/img/pages/promotions/apps/extended_appslide_blank02.png" alt=""/>
            <div class="info-wr">
                <h3>{{ 'Cookorama'|trans }}</h3>
                <p>{{ 'Кулинарное приложение сообщества для тех, кто любит&nbsp;готовить.'|trans|raw}}</p>
            </div>
        </div>
    </section>
{% endif %}

{% if app.request.locale == 'de' %}
    <section class="app-slide mfb de">
        <div class="wrap">
            <div class="app-inf">
                <h1>MeinFernbus.de</h1>

                <p>{{ 'Мобильное приложение для крупнейшего пассажирского перевозчика в Германии.'|trans }}</p>
            </div>
            <div class="app-img">
                <img src="/img/pages/promotions/apps/app_mfb_de.png" width="878" height="798" alt=""/>
            </div>
        </div>
    </section>
{% endif %}

{% if app.request.locale != 'de' %}
    <section class="testimonials" >
        <div class="wrap">
            <a id="slider-prev" href=""></a>
            <a id="slider-next" href=""></a>
            <h3>{{ 'Слово нашим клиентам'|trans }}</h3>
            <div class="icon icon-quote"></div>
            <div id="slider">
                <ul id="slidee">
                    <li>
                        <div class="inf-pad">
                            <div class="wr">
                                <p>{{ 'Мобильное кулинарное приложение — «Рецепты от Кукорамы» (Cookorama). Создали полезное и интуитивно удобное приложение для любителей готовить. Позволяет легко пополнять свою кулинарную книгу новыми рецептами, формировать список избранных рецептов и одним движением добавлять нужные продукты в список покупок, который корректируется в зависимости от количества порций или имеющихся продуктов.'|trans }}</p>
                                <div class="review-author">
                                    <p class="name">{{ 'Андрей Мануленко'|trans }},</p>
                                    <p>{{ 'сооснователь Cookorama.net'|trans }}</p>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="inf-pad">
                            <div class="wr">
                                <p>{{ 'KeepSnap позволяет зарабатывать всем фотографам, в том числе начинающим фотографам-любителям. Проект создавался с нуля, отталкиваясь от идеи. Фотографы делают снимки на различных мероприятиях, загружают их к себе в галерею, а люди могут найти и купить свои фотографии. Заинтересованность людей в покупке очень высока, т.к. есть личная привязанность к этим фотографиям. Студия отлично справилась с созданием сайта, нестандартными задачами по обработке фотографий и написанию нативных приложений для платформ iOS и Android.'|trans }}</p>
                                <div class="review-author">
                                    <p class="name">{{ 'Команда KeepSnap.com'|trans }},</p>
                                    <p>{{ 'Онтарио, Канада'|trans }}</p>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </section>

    <section class="other-apps">
        <div class="wrap">
            <h1>{{ 'Наши приложения'|trans }}</h1>
            <ul class="apps-list">
                <li>
                    <a href="https://itunes.apple.com/de/app/meinfernbus-die-fernbus-app/id938123192?mt=8">
                        <img src="/img/pages/promotions/apps/app_small_img01.png" width="140" height="140" alt=""/>
                        <p class="name">MeinFernbus</p>
                        <span class="icon icon-appstore"></span>
                    </a>
                </li>
                <li>
                    <a href="https://play.google.com/store/apps/details?id=com.stfalcon.keepsnap">
                        <img src="/img/pages/promotions/apps/app_small_img02.png" width="140" height="140" alt=""/>
                        <p class="name">KeepSnap</p>
                        <span class="icon icon-google-play"></span>
                    </a>
                </li>
                <li>
                    <a href="https://itunes.apple.com/us/app/dorogi-ukraini/id860682693?mt=8">
                        <img src="/img/pages/promotions/apps/app_small_img03.png" width="140" height="140" alt=""/>
                        <p class="name">UA Roads</p>
                        <span class="icon icon-appstore"></span>
                    </a>
                </li>
                <li>
                    <a href="https://play.google.com/store/apps/details?id=com.megasos">
                        <img src="/img/pages/promotions/apps/app_small_img04.png" width="140" height="140" alt=""/>
                        <p class="name">MegaS.O.S</p>
                        <span class="icon icon-google-play"></span>
                    </a>
                </li>

                <li>
                    <a href="https://play.google.com/store/apps/details?id=com.stfalcon.cookorama">
                        <img src="/img/pages/promotions/apps/app_small_img05.png" width="140" height="140" alt=""/>
                        <p class="name">Cookorama</p>
                        <span class="icon icon-google-play"></span>
                    </a>
                </li>
                <li>
                    <a href="https://itunes.apple.com/ua/app/map-case/id700693582?mt=8">
                        <img src="/img/pages/promotions/apps/app_small_img06.png" width="140" height="140" alt=""/>
                        <p class="name">MapCase</p>
                        <span class="icon icon-appstore"></span>
                    </a>
                </li>
                <li>
                    <a href="https://play.google.com/store/apps/details?id=com.stfalcon.unlocker">
                        <img src="/img/pages/promotions/apps/app_small_img07.png" width="140" height="140" alt=""/>
                        <p class="name">Unlocker 3D</p>
                        <span class="icon icon-google-play"></span>
                    </a>
                </li>
                <li>
                    <a href="https://itunes.apple.com/ua/app/lsgallery/id902957529?mt=8">
                        <img src="/img/pages/promotions/apps/app_small_img08.png" width="140" height="140" alt=""/>
                        <p class="name">LS Gallery Uploader</p>
                        <span class="icon icon-appstore"></span>
                    </a>
                </li>
            </ul>
        </div>
    </section>
{% endif %}

    <section id="feedback-line" class="blue-line">
        <div class="wrap">
            {% block order_form %}
            <form novalidate="novalidate" autocomplete="off" id="feedback-form" class="feedback-form" action="{{ path('promotion_order', {'type': 'apps'}) }}" method="post" {{ form_enctype(form) }}>
                <div class="form-pad">
                    <h1>{{ 'Заказать приложение'|trans }}</h1>

                    <div class="line">
                        <div class="col2 float-left">
                            {{ form_widget(form.name, {'attr': {'placeholder': 'Ваше имя'|trans} }) }}
                        </div>
                        <div class="col2 float-right">
                            {{ form_widget(form.email, {'attr': {'class' : 'email', 'placeholder': 'Электронная почта'|trans} }) }}
                        </div>
                    </div>
                    <div class="line">
                        {{ form_widget(form.message, {'attr': {'placeholder': 'Напишите пару слов о приложении'|trans} }) }}
                    </div>
                    <div class="line">
                        <button class="btn btn-black float-right">{{ 'Заказать приложение'|trans }}</button>
                    </div>
                </div>
                {{ form_rest(form) }}
                <div class="form-success">
                    <div class="wr">
                        <div class="inner-pad">
                            <h3>{{ 'Спасибо!'|trans }}</h3>

                            <p>{{ 'Мы изучим Вашу заявку<br>и ответим в ближайшее время.'|trans|raw }}</p>
                        </div>
                    </div>
                </div>

            </form>
            {% endblock order_form %}
        </div>
    </section>
    <!--content end-->

    <!--footer begin-->
    {{ include('ApplicationDefaultBundle:Default:_promotion_footer.html.twig') }}
    <!--footer end-->

{% endblock body %}

{% block javascripts %}

    {% set locale = app.request.locale %}

    {% javascripts 'js/vendor/jquery-1.11.1.min.js' 'js/sly.js' 'js/jquery.validate.min.js' 'js/promotion_apps_main.js' output='cache/js/*.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% if locale == 'en' %}
        {% javascripts 'js/locales/order_application_form.en.js' output='cache/js/*.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endif %}
    {% if locale == 'ru' %}
        {% javascripts 'js/locales/order_application_form.ru.js' output='cache/js/*.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endif %}
    {% if locale == 'de' %}
        {% javascripts 'js/locales/order_application_form.de.js' output='cache/js/*.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endif %}

{% endblock javascripts %}

{% block stylesheets %}
    <!--[if gte IE 8]>
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/ie.css') }}"/>
    <![endif]-->
    {% stylesheets filter='less, cssrewrite' output='cache/css/*.css' 'css/page_promotions.less' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}
