    <section id="feedback-line" class="blue-line">
        <div class="wrap">
            {% block order_form %}
                <form novalidate="novalidate" autocomplete="off" id="feedback-form" class="feedback-form" action="{{ path('promotion_order', {'type': 'design'}) }}" method="post" {{ form_enctype(form) }}>
                    <div class="form-pad">
                        <h1>{{ 'Заказать дизайн веб-сайта'|trans }}</h1>

                        <div class="line">
                            <div class="col2 float-left">
                                {{ form_widget(form.name, {'attr': {'placeholder': 'Ваше имя'|trans} }) }}
                            </div>
                            <div class="col2 float-right">
                                {{ form_widget(form.email, {'attr': {'class' : 'email', 'placeholder': 'Электронная почта'|trans} }) }}
                            </div>
                        </div>
                        <div class="line">
                            {{ form_widget(form.message, {'attr': {'placeholder': 'Напишите пару слов о сайте'|trans} }) }}
                        </div>
                        <div class="line">
                            <button class="btn btn-black float-right">{{ 'Заказать дизайн веб-сайта'|trans }}</button>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    <div class="form-success">
                        <div class="wr">
                            <div class="inner-pad">
                                <h3>{{ 'Спасибо!'|trans }}</h3>

                                <p>{{ 'Мы изучим Вашу заявку<br>и ответим в ближайшее время.'|trans|raw }}</p>
                            </div>
                        </div>
                    </div>

                </form>
            {% endblock order_form %}
        </div>
    </section>
    <!--content end-->

    <!--footer begin-->
    <footer class="vcard">
        <div class="wrap">
            {{ include('ApplicationDefaultBundle:Default:_promotion_footer.html.twig') }}
        </div>
    </footer>
    <!--footer end-->
{% endblock body %}

{% block javascripts %}

    {% set locale = app.request.locale %}

    {% javascripts
        'js/vendor/jquery-1.11.1.min.js'
        'js/sly.js'
        'js/jquery.validate.min.js'
        'js/promotion_apps_main.js'
        output='cache/js/*.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% if locale == 'en' %}
        {% javascripts 'js/locales/order_application_form.en.js' output='cache/js/*.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endif %}
    {% if locale == 'ru' %}
        {% javascripts 'js/locales/order_application_form.ru.js' output='cache/js/*.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endif %}
    {% if locale == 'de' %}
        {% javascripts 'js/locales/order_application_form.de.js' output='cache/js/*.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endif %}

{% endblock javascripts %}

{% block stylesheets %}
    <!--[if gte IE 8]>
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/ie.css') }}"/>
    <![endif]-->
    {% stylesheets filter='less, cssrewrite' output='cache/css/*.css' 'css/page_promotions.less' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}
