    <section id="feedback-line" class="blue-line">
        <div class="wrap">
            {% block order_form %}
                {% include 'ApplicationDefaultBundle:Default/promotion:order_form.html.twig' with {'form': form, 'type': 'design', 'locale': app.request.locale} %}
            {% endblock order_form %}
        </div>
    </section>
    <!--content end-->

    <!--footer begin-->
    {{ include('ApplicationDefaultBundle:Default:_promotion_footer.html.twig') }}
