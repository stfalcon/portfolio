            </div>
            <div class="site-img">
                <img src="{{ asset('img/pages/promotions/apps/page_keepsnap.jpg') }}" width="630" height="378" alt=""/>
                <div class="dev-img">
                    <img src="{{ asset('img/pages/promotions/apps/devapp_keepsnap.png') }}" width="183" height="330" alt=""/>
                </div>
            </div>
        </div>
    </section>

    <section class="design-slide mfb">
        <div class="wrap">
            <div class="app-inf">
