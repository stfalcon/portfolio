                <p>{{ "Сайт крупнейшей компании<br>пассажирских перевозок в Европе." | trans()|raw }}</p>
            </div>
            <div class="site-img">
                <img src="{{ asset('img/pages/promotions/apps/page_mfb.jpg') }}" width="630" height="378" alt=""/>
                <div class="dev-img">
                    <img src="{{ asset('img/pages/promotions/apps/devapp_mfb.png') }}" width="183" height="330" alt=""/>
                </div>
            </div>
        </div>
    </section>

    <section class="design-slide empo">
        <div class="wrap">
            <div class="app-inf">
                <h1>{{ "EMPO" | trans() }}</h1>
