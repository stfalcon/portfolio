<div class="projects-nav">
    {% if previousProject %}
        <a href="{{ path('portfolio_project_view', { 'categorySlug': previousProject.categories.first().slug, 'projectSlug': previousProject.slug }) }}" class="prev-page">{{ "Предыдущий проект"|trans }}</a>
    {% endif %}

    {% if nextProject %}
        <a href="{{ path('portfolio_project_view', { 'categorySlug': nextProject.categories.first().slug, 'projectSlug': nextProject.slug }) }}" class="next-page">{{ "Следующий проект"|trans }}</a>
    {% endif %}
</div>