<html xmlns:og="http://ogp.me/ns#">
<head {{ sonata_seo_head_attributes() }}>
    {% block abtest %}{% endblock abtest %}
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}{% endblock %}</title>
    <link rel="sitemap" type="application/xml" href="{{ app.request.scheme }}://stfalcon.com/sitemap.xml" />

    {{ sonata_seo_metadatas() }}
    {{ sonata_seo_link_canonical() }}
    {{ sonata_seo_lang_alternates() }}

    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <link rel="alternate" type="application/rss+xml" title="RSS Feed for stfalcon.com" href="{{ url('blog_rss') }}" />
    {% block additional %}{% endblock additional %}

    {% block stylesheets %}
        <!--[if gte IE 8]>
        <link rel="stylesheet" media="screen" href="{{ asset('css/ie.css') }}"/>
        <![endif]-->
        <link rel="stylesheet" media="screen" href="{{ asset('css/style.min.css') }}?{{ 'now'|date('Ymd') }}"/>
    {% endblock %}

    <script src="{{ asset('js/vendor/modernizr-2.6.2.min.js') }}" type="text/javascript"></script>
    {% if app.request.host == 'stfalcon.com' %}
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-5635962-2', 'auto');
            ga('require', 'displayfeatures');
            ga('send', 'pageview');
        </script>

        <!-- Yandex.Metrika counter -->
        <script type="text/javascript">
            (function (d, w, c) {
                (w[c] = w[c] || []).push(function() {
                    try {
                        w.yaCounter27048220 = new Ya.Metrika({id:27048220,
                            webvisor:true,
                            clickmap:true,
                            trackLinks:true,
                            accurateTrackBounce:true});
                    } catch(e) { }
                });

                var n = d.getElementsByTagName("script")[0],
                        s = d.createElement("script"),
                        f = function () { n.parentNode.insertBefore(s, n); };
                s.type = "text/javascript";
                s.async = true;
                s.src = (d.location.protocol == "https:" ? "https:" : "http:") + "//mc.yandex.ru/metrika/watch.js";

                if (w.opera == "[object Opera]") {
                    d.addEventListener("DOMContentLoaded", f, false);
                } else { f(); }
            })(document, window, "yandex_metrika_callbacks");
        </script>
        <!-- /Yandex.Metrika counter -->
        <!-- Facebook Conversion Code for заявка -->
        <script>(function() {
                var _fbq = window._fbq || (window._fbq = []);
                if (!_fbq.loaded) {
                    var fbds = document.createElement('script');
                    fbds.async = true;
                    fbds.src = '//connect.facebook.net/en_US/fbds.js';
                    var s = document.getElementsByTagName('script')[0];
                    s.parentNode.insertBefore(fbds, s);
                    _fbq.loaded = true;
                }
            })();
            window._fbq = window._fbq || [];
            window._fbq.push(['track', '6020145370099', {'value':'0.00','currency':'USD'}]);
        </script>
    {% endif %}
</head>
<body>
    {% block body %}{% endblock %}
    {% block after_body %}{% endblock %}

    <script type="text/javascript">
        var subscribeFullText = '{{ 'Подписаться на новые записи'|trans }}';
        var subscribeShortText = '{{ 'Подписаться'|trans }}';
    </script>
    {% block javascripts %}
        {% javascripts
            'js/vendor/jquery-1.7.2.min.js'
            'js/plugins.js'
            'js/autosize.min.js'
            'js/headroom.js'
            'js/underscore-min.js'
            'js/search.js'
            'js/subscribe.js'
            'js/jquery.validate.min.js'
            'js/main.js'
            'js/widgets.js'
            output='cache/js/*.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
    {% if app.request.host == 'stfalcon.com' %}
        <!-- Google Code for Remarketing Tag -->
        <script type="text/javascript">
            /* <![CDATA[ */
            var google_conversion_id = 1047640200;
            var google_custom_params = window.google_tag_params;
            var google_remarketing_only = true;
            /* ]]> */
        </script>
        <script type="text/javascript" src="//www.googleadservices.com/pagead/conversion.js"></script>
        <noscript>
            <div style="display:inline;">
                <img height="1" width="1" style="border-style:none;" alt="" src="//googleads.g.doubleclick.net/pagead/viewthroughconversion/1047640200/?value=0&amp;guid=ON&amp;script=0"/>
            </div>
        </noscript>
        <script type="text/javascript">
            $(document).ready(function() {
                $( "a[href^='tel:']" ).on( 'click', function() {
                    ga('send', 'event', 'click', 'phone', this.href);
                });

                $( "a[href^='skype:stfalcon']" ).on( 'click', function() {
                    ga('send', 'event', 'click', 'skype', this.href);
                });

                $( "a[href='mailto:info@stfalcon.com']" ).on( 'click', function() {
                    ga('send', 'event', 'click', 'mail', this.href);
                });
            });
        </script>
    {% endif %}
</body>
</html>
