<header>
    <h1>
        {% if linkTitle %}
            <a href="{{ path('blog_post_view', { 'slug': post.slug }) }}">{{ post.title }}</a>
        {% else %}
            {{ post.title }}
        {% endif %}
    </h1>

    <div class="post-info">
        <time pubdate="pubdate">{{ post.created|date("d M Y") }}</time>
        {% if post.author and post.author.avatarName %}
            <img src="{{ vich_uploader_asset(post.author, 'avatar') | apply_filter('avatar_small') }}" alt="{{ post.author.firstname | default('') ~ ' ' ~ post.author.lastname | default('') }}"/>
        {% endif %}
        <span>{{ post.author.firstname | default('') ~ ' ' ~  post.author.lastname | default('') }}</span>
        <a href="{{ path('blog_post_view', { 'slug': post.slug }) }}#disqus_thread" data-disqus-identifier="{{ post.id }}">{{ 'Комментировать'|trans }}</a>
    </div>
</header>
<script type="text/javascript">
    var disqus_shortname = '{{ disqus_shortname }}';
    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var s = document.createElement('script');
        s.async = true;
        s.type = 'text/javascript';
        s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    }());
</script>